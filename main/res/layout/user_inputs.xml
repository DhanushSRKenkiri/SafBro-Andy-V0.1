<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_inputs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Make Your Experience better"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="casual" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:fontFamily="casual"
            android:text="Select the best options which suits you"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="30dp"
            android:text="*This helps with our recomendations for you"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="casual" />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <!-- First column of checkboxes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_audiolectures"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/startup1"
                    android:text="Audio-Lectures"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/checkbox_podcasts"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup3"
                    android:layout_marginTop="5dp"
                    android:text="PodCasts"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <!-- Second column of checkboxes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_audiobooks"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup2"
                    android:layout_marginTop="5dp"
                    android:text="Audio-books"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/checkbox_sciencenigga"
                    android:layout_width="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup4"
                    android:text="Science"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_meditateman"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/startup5"
                    android:text="Meditation"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/checkbox_documentriesaregood"
                    android:layout_width="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup7"
                    android:text="Documentries"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_thesesispluralforthesis"
                    android:layout_width="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup6"
                    android:text="Theses"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/checkbox_journals"
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/startup8"
                    android:text="Journals"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/enter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button"
            android:text="Next"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>